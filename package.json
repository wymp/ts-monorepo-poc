{
  "name": "@monorepo/poc",
  "version": "1.0.0",
  "description": "A proof of concept for a monorepo using pnpm and typescript",
  "private": true,
  "scripts": {
    "build": "pnpm build:libs && pnpm build:apps",
    "build:libs": "pnpm --filter './libs/*' build",
    "build:apps": "pnpm --filter './apps/*' build",
    "check": "pnpm -r check",
    "clean": "pnpm -r clean",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [],
  "author": "Kael Shipman",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.8"
  },
  "pnpm": {
    "overrides": {
      "@types/express": "$@types/express",
      "@types/node": "$@types/node",
      "@types/react": "$@types/react",
      "@types/react-dom": "$@types/react-dom",
      "@vitejs/plugin-react": "$@vitejs/plugin-react",
      "express": "$express",
      "react": "$react",
      "react-dom": "$react-dom"
    }
  }
}
